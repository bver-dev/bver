{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@bver/database": ["./packages/database/src"],
      "@bver/assessment": ["./packages/assessment/src"],
      "@bver/pdf-generator": ["./packages/pdf-generator/src"]
    }
  },
  "include": ["packages/**/*", "app/**/*"],
  "exclude": ["node_modules", "dist", ".next"]
}